<h3>Cart Page</h3>

<div id="page_cart">
    <table class="table">
        <thead>
            <tr>
                <th>Option</th>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.cart)
            {
                <tr>
                    <td><a class="button button-gray" asp-controller="cart" asp-action="remove" asp-route-id="@item.Id">Remove</a></td>
                    <td>@item.Id</td>
                    <td>@item.GameName</td>
                    <td><img src="@item.CoverArt" width="60" /> </td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Summary: @ViewBag.total</p><br>
    <a class="button button-cian" onclick="return show(page_pay_mode, page_cart)">go to paymode</a>
    <a class="button button-cian" asp-controller="Games" asp-action="Index">Continue Shopping</a>
</div>

<div id="page_pay_mode">
    <input type="radio" name="paymode" value="credit_card"> Credit card<br>
    <input type="radio" name="paymode" value="paypal"> Paypal<br>
    <a class="button button-cian" asp-controller="Cart" asp-action="Buy">Go to pay</a>
</div>




<script>
    function show(shown, hidden) {
        document.getElementById(shown).style.display='block';
        document.getElementById(hidden).style.display='none';
        return false;
    }
</script>

