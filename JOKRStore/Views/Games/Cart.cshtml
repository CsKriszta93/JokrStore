<h3>Cart Page</h3>
<table class="table">
    <thead>
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a class="button button-gray" asp-controller="cart" asp-action="remove" asp-route-id="@item.Id">Remove</a></td>
                <td>@item.Id</td>
                <td>@item.GameName</td>
                <td><img src="@item.CoverArt" width="60" /> </td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
<p>Summary: @ViewBag.total</p><br>
<a class="button button-cian" asp-controller="Games" asp-action="Index">Continue Shopping</a>
<a class="button button-cian" asp-controller="Cart" asp-action="Paying">Go to pay</a>
