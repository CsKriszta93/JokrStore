@model JOKRStore.Web.ViewModels.GameEditViewModel

<link rel="stylesheet" type="text/css" href="~/css/button.css">

<form asp-action="SaveGameDescription" asp-controller="Games" method="post" class="form-horizontal" style="margin: 10px" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-sm-2" for="DiscLang">Language: </label>
        
        <div class="col-sm-5">
            <select id="DiscLang" name="DiscLang" class="form-control" placeholder="Language ">
                    <option value="0">English</option>
                    <option value="1">Hungarian</option>
            </select>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="DiscArea">Discription: </label>
            <textarea class="form-control" rows="8" id="DiscArea" name="contain" placeholder="Write the game's discription here" class="form-control">
                @*@if (Model.Game.Description.Content != null)
                {
                    @Model.Game.Description.Content
                }*@
            </textarea>
        </div>

        <button id="submit" class="button button-cian">Submit</button>
    </div>
</form>