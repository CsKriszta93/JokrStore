@model IEnumerable<JOKRStore.Web.ViewModels.ForumCategoryViewModel>

<link rel="stylesheet" type="text/css" href="~/css/list.css">

<div style="margin: 50px">
    @foreach (var c in Model)
    {
        <a asp-controller="Forum" asp-action="ForumTopicList" asp-route-id="@c.Id" style="color: white">
        <div class="list-item-dark"><img src="~/images/folder.png" style="width: 30px; height: 30px; margin-right: 5px"> @c.name</div>
        </a>
    }
</div>