@model JOKRStore.Web.ViewModels.UserViewModel

<link rel="stylesheet" href="~/css/details.css">
<link rel="stylesheet" href="~/css/flip.css">

<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="Content/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="~/css/site.css">

        <title>Game store</title>
    </head>

    <body>
        <h1>@Model.UserName</h1>
        <hr>
        <div class="text_box">
            <p><b>Register date:</b> @Model.Registration</p>
            <p><b>Last Login:</b> @Model.LastLogin</p>
        </div>

        @if (Model.Config != null)
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="header-big"> Computer configuration:</div>
                        <p><b>Processor:</b> @Model.Config.CPU.name </p>
                        <p><b>Memory:</b> @Model.Config.RAM MB </p>
                        <p><b>Video card:</b> @Model.Config.GPU.name</p>
                        <p><b>Operating system:</b> @Model.Config.OS.name</p>
                    </div>
                </div>
            </div>
        }

        @if (Model.UserGames.Count() > 0)
        {

            <div class="header-big"> @Model.UserName's games</div>
            <div class="container mosaic">  
            @foreach (var game in Model.UserGames)
            {
                <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Game.Id">
                    @*<div class="card">*@
                    <div class="flip-box">
                    <div class="flip-box-inner">
                        @*<div class="poster">*@
                        <div class="flip-box-front">
                            <img class="flip-image" src="~/images/@game.Game.GameName/CoverArt.jpg">
                        </div>
                        @*<div class="details">*@
                        <div class="flip-box-back">
                            <div class="tags">
                                <span class="adventure">Adventure</span>
                                <span class="first-person">First person</span>
                            </div>
                            <div class="info">
                                <p>@game.Game.Description</p>
                            </div>
                        </div>
                    </div>
                    </div>

                    <p style="font-size: 20px; color:white; text-align: center;">@game.Game.GameName</p>
                </a>
            }

            </div>
        }
        

    </body>
</html>

